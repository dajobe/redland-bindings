with "aunit";
with "aunit_shared";

project Aunit_Tests is

   for Languages use ("Ada");
   for Main use ("aunit_harness.adb");
   for Source_Dirs use ("src");
   for Exec_Dir use "exe/" & AUnit_Shared.Target & "-" & AUnit_Shared.Runtime;
   for Object_Dir use
     "obj/" & AUnit_Shared.Target & "-" & AUnit_Shared.Runtime;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use
        ("-g", "-gnatQ", "-O1", "-gnatf", "-gnato", "-gnatwa.Xe", "-gnaty");
   end Compiler;

end Aunit_Tests;

